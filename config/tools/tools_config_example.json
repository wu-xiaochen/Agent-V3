{
  "version": "1.0",
  "description": "简化版工具配置示例",
  "tools": [
    {
      "name": "search",
      "type": "builtin",
      "enabled": true,
      "description": "搜索引擎工具"
    },
    {
      "name": "calculator",
      "type": "builtin",
      "enabled": true,
      "description": "数学计算工具"
    },
    {
      "name": "crewai_generator",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI团队配置生成工具"
    },
    {
      "name": "crewai_runtime",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI运行时工具"
    },
    {
      "name": "weather_api",
      "type": "api",
      "enabled": false,
      "description": "天气API工具",
      "config": {
        "endpoint": "https://api.openweathermap.org/data/2.5/weather",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer ${WEATHER_API_KEY}"
        },
        "parameters": {
          "q": {
            "type": "string",
            "required": true,
            "description": "城市名称"
          },
          "units": {
            "type": "string",
            "required": false,
            "default": "metric",
            "description": "单位系统"
          }
        },
        "response_mapping": {
          "temperature": "$.main.temp",
          "description": "$.weather[0].description",
          "humidity": "$.main.humidity"
        }
      }
    },
    {
      "name": "n8n_mcp_tool",
      "type": "mcp",
      "enabled": false,
      "description": "n8n MCP工具",
      "config": {
        "server_url": "http://localhost:8080",
        "server_name": "n8n_mcp_server",
        "tool_name": "workflow_executor",
        "timeout": 60
      }
    }
  ],
  "tool_groups": [
    {
      "name": "core_tools",
      "description": "核心工具集",
      "tools": ["search", "calculator"]
    },
    {
      "name": "crewai_tools",
      "description": "CrewAI工具集",
      "tools": ["crewai_generator", "crewai_runtime"]
    },
    {
      "name": "external_tools",
      "description": "外部工具集",
      "tools": ["weather_api", "n8n_mcp_tool"]
    }
  ],
  "agent_tool_mapping": {
    "unified_agent": ["core_tools", "crewai_tools"],
    "supply_chain_agent": ["core_tools", "crewai_tools", "external_tools"],
    "default": ["core_tools"]
  }
}