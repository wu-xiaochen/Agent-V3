{
  "version": "1.0",
  "description": "开发环境工具配置",
  "tools": [
    {
      "name": "search",
      "type": "builtin",
      "enabled": true,
      "description": "搜索引擎工具",
      "config": {
        "provider": "serper",
        "max_results": 5,
        "debug": true
      }
    },
    {
      "name": "calculator",
      "type": "builtin",
      "enabled": true,
      "description": "数学计算工具",
      "config": {
        "precision": 2,
        "debug": true
      }
    },
    {
      "name": "time",
      "type": "builtin",
      "enabled": true,
      "description": "时间工具",
      "config": {
        "timezone": "Asia/Shanghai",
        "format": "YYYY-MM-DD HH:mm:ss",
        "debug": true
      }
    },
    {
      "name": "crewai_generator",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI团队配置生成工具",
      "config": {
        "template_path": "config/crewai_templates",
        "output_format": "json",
        "debug": true
      }
    },
    {
      "name": "crewai_runtime",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI运行时工具",
      "config": {
        "max_execution_time": 300,
        "verbose": true,
        "debug": true
      }
    },
    {
      "name": "test_api_tool",
      "type": "api",
      "enabled": true,
      "description": "测试API工具",
      "config": {
        "endpoint": "http://localhost:3000/api/test",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json",
          "X-Debug": "true"
        },
        "parameters": {
          "input": {
            "type": "string",
            "required": true,
            "description": "测试输入"
          }
        },
        "response_mapping": {
          "result": "$.data",
          "status": "$.status"
        },
        "timeout": 10,
        "debug": true
      }
    }
  ],
  "tool_groups": [
    {
      "name": "dev_core_tools",
      "description": "开发核心工具集",
      "tools": ["search", "calculator", "time"]
    },
    {
      "name": "dev_crewai_tools",
      "description": "开发CrewAI工具集",
      "tools": ["crewai_generator", "crewai_runtime"]
    },
    {
      "name": "dev_test_tools",
      "description": "开发测试工具集",
      "tools": ["test_api_tool"]
    }
  ],
  "agent_tool_mapping": {
    "unified_agent": ["dev_core_tools", "dev_crewai_tools"],
    "supply_chain_agent": ["dev_core_tools", "dev_crewai_tools", "dev_test_tools"],
    "test_agent": ["dev_core_tools", "dev_test_tools"],
    "default": ["dev_core_tools"]
  }
}