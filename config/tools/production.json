{
  "version": "1.0",
  "description": "生产环境工具配置",
  "tools": [
    {
      "name": "search",
      "type": "builtin",
      "enabled": true,
      "description": "搜索引擎工具",
      "config": {
        "provider": "serper",
        "max_results": 10,
        "cache_results": true,
        "cache_ttl": 3600
      }
    },
    {
      "name": "calculator",
      "type": "builtin",
      "enabled": true,
      "description": "数学计算工具",
      "config": {
        "precision": 6,
        "log_operations": true
      }
    },
    {
      "name": "weather",
      "type": "builtin",
      "enabled": true,
      "description": "天气查询工具",
      "config": {
        "provider": "openweathermap",
        "units": "metric",
        "language": "zh_cn",
        "cache_results": true,
        "cache_ttl": 1800
      }
    },
    {
      "name": "crewai_generator",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI团队配置生成工具",
      "config": {
        "template_path": "config/crewai_templates",
        "output_format": "json",
        "log_requests": true
      }
    },
    {
      "name": "crewai_runtime",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI运行时工具",
      "config": {
        "max_execution_time": 600,
        "verbose": false,
        "log_executions": true
      }
    },
    {
      "name": "production_api_tool",
      "type": "api",
      "enabled": true,
      "description": "生产API工具",
      "config": {
        "endpoint": "https://api.production.example.com/v1/process",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer ${PROD_API_KEY}",
          "Content-Type": "application/json",
          "X-Client-Version": "1.0.0"
        },
        "parameters": {
          "request_id": {
            "type": "string",
            "required": true,
            "description": "请求ID"
          },
          "data": {
            "type": "object",
            "required": true,
            "description": "请求数据"
          }
        },
        "response_mapping": {
          "result": "$.data.result",
          "status": "$.status",
          "error_code": "$.error.code",
          "error_message": "$.error.message"
        },
        "timeout": 30,
        "retry_count": 3,
        "retry_delay": 1
      }
    }
  ],
  "tool_groups": [
    {
      "name": "prod_core_tools",
      "description": "生产核心工具集",
      "tools": ["search", "calculator", "weather"]
    },
    {
      "name": "prod_crewai_tools",
      "description": "生产CrewAI工具集",
      "tools": ["crewai_generator", "crewai_runtime"]
    },
    {
      "name": "prod_api_tools",
      "description": "生产API工具集",
      "tools": ["production_api_tool"]
    },
    {
      "name": "prod_all_tools",
      "description": "生产环境所有工具",
      "tools": ["search", "calculator", "weather", "crewai_generator", "crewai_runtime", "production_api_tool"]
    }
  ],
  "agent_tool_mapping": {
    "unified_agent": ["prod_core_tools", "prod_crewai_tools"],
    "supply_chain_agent": ["prod_core_tools", "prod_crewai_tools", "prod_api_tools"],
    "production_agent": ["prod_all_tools"],
    "default": ["prod_core_tools"]
  }
}