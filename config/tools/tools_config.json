{
  "version": "1.0",
  "description": "智能体工具配置示例",
  "tools": [
    {
      "type": "builtin",
      "name": "time",
      "description": "获取当前时间",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "search",
      "description": "网络搜索工具",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "calculator",
      "description": "数学计算工具",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "data_analyzer",
      "description": "数据分析工具",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "forecasting_model",
      "description": "需求预测工具",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "optimization_engine",
      "description": "优化引擎工具",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "risk_assessment",
      "description": "风险评估工具",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "crewai_generator",
      "description": "CrewAI团队配置生成工具",
      "enabled": true
    },
    {
      "type": "builtin",
      "name": "crewai_runtime",
      "description": "CrewAI运行时工具",
      "enabled": true
    },
    {
      "type": "api",
      "name": "weather_api",
      "description": "天气查询API",
      "url": "https://api.openweathermap.org/data/2.5/weather",
      "method": "GET",
      "auth_type": "api_key",
      "auth_config": {
        "key": "${WEATHER_API_KEY}",
        "header": "X-API-Key"
      },
      "parameters": {
        "q": {
          "type": "string",
          "description": "城市名称",
          "required": true
        },
        "units": {
          "type": "string",
          "description": "单位系统 (metric, imperial, kelvin)",
          "default": "metric"
        },
        "lang": {
          "type": "string",
          "description": "语言代码",
          "default": "zh_cn"
        }
      },
      "response_mapping": {
        "temperature": "$.main.temp",
        "humidity": "$.main.humidity",
        "description": "$.weather[0].description",
        "city": "$.name",
        "country": "$.sys.country"
      }
    },
    {
      "type": "api",
      "name": "github_api",
      "description": "GitHub API工具",
      "url": "https://api.github.com",
      "method": "GET",
      "auth_type": "bearer",
      "auth_config": {
        "token": "${GITHUB_TOKEN}"
      },
      "parameters": {
        "endpoint": {
          "type": "string",
          "description": "API端点路径",
          "required": true
        },
        "query": {
          "type": "object",
          "description": "查询参数",
          "default": {}
        }
      },
      "response_mapping": {
        "data": "$"
      }
    },
    {
      "type": "mcp",
      "name": "n8n_workflow",
      "description": "N8N工作流执行工具",
      "server_url": "http://localhost:5678",
      "tool_name": "execute_workflow",
      "auth_type": "bearer",
      "auth_config": {
        "token": "${N8N_API_TOKEN}"
      },
      "parameters": {
        "workflow_id": {
          "type": "string",
          "description": "工作流ID",
          "required": true
        },
        "data": {
          "type": "object",
          "description": "输入数据",
          "default": {}
        }
      },
      "response_mapping": {
        "result": "$.result.data",
        "execution_id": "$.executionId",
        "status": "$.result.status"
      }
    },
    {
      "type": "mcp",
      "name": "slack_mcp",
      "description": "Slack消息发送工具",
      "server_url": "https://slack-mcp.example.com",
      "tool_name": "send_message",
      "auth_type": "api_key",
      "auth_config": {
        "key": "${SLACK_API_KEY}",
        "header": "Authorization"
      },
      "parameters": {
        "channel": {
          "type": "string",
          "description": "频道ID或名称",
          "required": true
        },
        "message": {
          "type": "string",
          "description": "消息内容",
          "required": true
        },
        "thread_ts": {
          "type": "string",
          "description": "回复线程时间戳",
          "required": false
        }
      },
      "response_mapping": {
        "success": "$.ok",
        "timestamp": "$.ts",
        "channel": "$.channel"
      }
    },
    {
      "type": "mcp_stdio",
      "name": "n8n_mcp_generator",
      "description": "N8N工作流生成工具",
      "enabled": true,
      "command": "docker",
      "args": ["exec", "n8n-mcp", "node", "dist/mcp/index.js"],
      "env": {
        "N8N_API_URL": "http://host.docker.internal:5678",
        "N8N_API_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiJkNjU4MDQ2Ni01MDkyLTQyYmEtODc1NS1lMDM4M2M2MDAxNzMiLCJpc3MiOiJuOG4iLCJhdWQiOiJwdWJsaWMtYXBpIiwiaWF0IjoxNzYxNjMxNjA0LCJleHAiOjE3NjQyMTk2MDB9.Ktof_b_2Ejzd0sYTA2ITph8QdSZ35jKe-elgehjOCRQ"
      },
      "tools": [
        "n8n_search_nodes",
        "n8n_get_node_info",
        "n8n_generate_workflow",
        "n8n_validate_workflow",
        "n8n_deploy_workflow"
      ]
    }
  ],
  "tool_groups": {
    "basic": ["time", "search", "calculator"],
    "supply_chain": ["data_analyzer", "forecasting_model", "optimization_engine", "risk_assessment", "crewai_generator", "crewai_runtime"],
    "external_apis": ["weather_api", "github_api"],
    "mcp_tools": ["n8n_workflow", "slack_mcp", "n8n_mcp_generator"],
    "all": ["time", "search", "calculator", "data_analyzer", "forecasting_model", "optimization_engine", "risk_assessment", "crewai_generator", "crewai_runtime", "weather_api", "github_api", "n8n_workflow", "slack_mcp", "n8n_mcp_generator"]
  },
  "agent_tool_mapping": {
    "unified_agent": ["time", "search", "calculator", "crewai_generator", "crewai_runtime", "n8n_mcp_generator"],
    "supply_chain_agent": ["time", "search", "calculator", "data_analyzer", "forecasting_model", "optimization_engine", "risk_assessment", "crewai_generator", "crewai_runtime", "n8n_mcp_generator"],
    "api_agent": ["weather_api", "github_api"],
    "mcp_agent": ["n8n_workflow", "slack_mcp", "n8n_mcp_generator"],
    "dev_agent": ["time", "search", "calculator", "github_api"],
    "notification_agent": ["time", "slack_mcp"],
    "full_stack_agent": ["time", "search", "calculator", "weather_api", "github_api", "n8n_workflow", "slack_mcp", "n8n_mcp_generator", "crewai_generator", "crewai_runtime"]
  }
}