{
  "version": "1.0",
  "description": "工具配置文件模板",
  "tools": [
    {
      "name": "search",
      "type": "builtin",
      "enabled": true,
      "description": "搜索引擎工具，用于搜索网络信息",
      "config": {
        "provider": "serper",
        "max_results": 10
      }
    },
    {
      "name": "calculator",
      "type": "builtin",
      "enabled": true,
      "description": "数学计算工具，用于执行基本和高级数学运算",
      "config": {
        "precision": 4
      }
    },
    {
      "name": "weather",
      "type": "builtin",
      "enabled": true,
      "description": "天气查询工具，用于获取城市天气信息",
      "config": {
        "provider": "openweathermap",
        "units": "metric",
        "language": "zh_cn"
      }
    },
    {
      "name": "time",
      "type": "builtin",
      "enabled": true,
      "description": "时间工具，用于获取当前时间和日期信息",
      "config": {
        "timezone": "Asia/Shanghai",
        "format": "YYYY-MM-DD HH:mm:ss"
      }
    },
    {
      "name": "crewai_generator",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI团队配置生成工具，用于根据业务需求生成智能体团队配置",
      "config": {
        "template_path": "config/crewai_templates",
        "output_format": "json"
      }
    },
    {
      "name": "crewai_runtime",
      "type": "builtin",
      "enabled": true,
      "description": "CrewAI运行时工具，用于执行已生成的团队配置",
      "config": {
        "max_execution_time": 300,
        "verbose": true
      }
    },
    {
      "name": "custom_api_tool",
      "type": "api",
      "enabled": false,
      "description": "自定义API工具示例，用于调用外部API",
      "config": {
        "endpoint": "https://api.example.com/endpoint",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer ${API_KEY}",
          "Content-Type": "application/json"
        },
        "parameters": {
          "query": {
            "type": "string",
            "required": true,
            "description": "搜索查询字符串"
          },
          "limit": {
            "type": "integer",
            "required": false,
            "default": 10,
            "description": "返回结果数量限制"
          }
        },
        "response_mapping": {
          "result": "$.data.results",
          "error": "$.error.message"
        },
        "timeout": 30
      }
    },
    {
      "name": "mcp_tool",
      "type": "mcp",
      "enabled": false,
      "description": "MCP工具示例，用于连接MCP服务器",
      "config": {
        "server_url": "http://localhost:8080",
        "server_name": "example_mcp_server",
        "tool_name": "example_tool",
        "timeout": 30,
        "auth": {
          "type": "bearer",
          "token": "${MCP_AUTH_TOKEN}"
        }
      }
    }
  ],
  "tool_groups": [
    {
      "name": "basic_tools",
      "description": "基础工具集合",
      "tools": ["search", "calculator", "time"]
    },
    {
      "name": "external_tools",
      "description": "外部API工具集合",
      "tools": ["weather", "custom_api_tool"]
    },
    {
      "name": "crewai_tools",
      "description": "CrewAI相关工具集合",
      "tools": ["crewai_generator", "crewai_runtime"]
    },
    {
      "name": "mcp_tools",
      "description": "MCP工具集合",
      "tools": ["mcp_tool"]
    },
    {
      "name": "all_tools",
      "description": "所有可用工具",
      "tools": ["search", "calculator", "weather", "time", "crewai_generator", "crewai_runtime"]
    }
  ],
  "agent_tool_mapping": {
    "unified_agent": ["basic_tools", "crewai_tools"],
    "supply_chain_agent": ["basic_tools", "external_tools", "crewai_tools"],
    "default": ["basic_tools"]
  }
}