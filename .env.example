# Agent-V3 环境变量示例文件
# 复制此文件为 .env 并根据您的需求修改配置

# =============================================================================
# LLM API 配置
# =============================================================================

# OpenAI API配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORGANIZATION=

# Anthropic Claude API配置
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Hugging Face API配置
HUGGINGFACEHUB_API_TOKEN=your-huggingface-api-key-here

# 硅基流动 API配置
SILICONFLOW_API_KEY=your-siliconflow-api-key-here

# Azure OpenAI配置
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_BASE=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# =============================================================================
# 数据库配置
# =============================================================================

# PostgreSQL配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_v3
DB_USERNAME=postgres
DB_PASSWORD=your-db-password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# MongoDB配置
MONGO_USERNAME=
MONGO_PASSWORD=
MONGO_SSL_CERT_FILE=
MONGO_SSL_KEY_FILE=
MONGO_SSL_CA_FILE=

# Elasticsearch配置
ES_USERNAME=
ES_PASSWORD=
ES_CA_CERTS=
ES_CLIENT_CERT=
ES_CLIENT_KEY=

# Pinecone配置
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# =============================================================================
# 应用配置
# =============================================================================

# 应用环境
APP_ENV=development  # development, staging, production

# 日志级别
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# 应用密钥
SECRET_KEY=your-secret-key-here

# 应用主机和端口
APP_HOST=0.0.0.0
APP_PORT=8000

# =============================================================================
# 安全配置
# =============================================================================

# API密钥
API_KEYS=key1,key2,key3

# =============================================================================
# 监控配置
# =============================================================================

# Jaeger追踪
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# 其他服务配置
# =============================================================================

# 嵌入模型配置
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# 向量存储配置
VECTOR_STORE_PROVIDER=chromadb  # chromadb, faiss, pinecone
CHROMADB_PATH=./data/chroma
FAISS_PATH=./data/faiss

# 缓存配置
CACHE_PROVIDER=redis  # redis, memory, file
CACHE_TTL=3600

# CrewAI配置
CREWAI_DEFAULT_MODEL=gpt-4
CREWAI_MAX_AGENTS=10
CREWAI_MAX_TASKS=20